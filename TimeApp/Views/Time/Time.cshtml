@model DateTime
@{
    ViewData["Title"] = "Title";
}



<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Time</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>


    <div class="container">
        <div class="row">
            <div class="col-md-12" style="font-size:15em;">
                <h1>Time</h1>
                <p id="time">@Model.ToString("hh:mm:ss")</p>
            </div>
        </div>
    </div>




    <script>

        let time = document.getElementById("time");

        const refrestTime = () => {
            let date = new Date();
            time.innerHTML = date.toLocaleTimeString();
        }

        setInterval(() => {
            refrestTime();
        }, 1000);


    </script>

</body>
</html>


   





